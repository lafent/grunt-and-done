extend ../includes/base

block head
  title Home

block content
  div(class="jumbotron")
    div(class="container")
      h1 Welcome to {{ My New Site }}!
      p.
        A website about something really interesting!
      p
        a(class="btn btn-primary btn-lg", href="/contact.html").
          Contact Us &raquo;

  div(class="container")
    div(class="row")
      div(class="col-lg-4")
        h2 Sticky Footer
        p.
          An example page setup with a navbar, sticky footer, and no left or 
          right side navigation.
        p
          a(class="btn btn-default", href="/example-1-sticky-footer.html") Example 1 &raquo;

      div(class="col-lg-4")
        h2 Blog
        p.
          A layout that's suitable for a blog site, including navbar and simple
          sidebar listings.
        p
          a(class="btn btn-default", href="/example-2-blog.html") Example 2 &raquo;

      div(class="col-lg-4")
        h2 Dashboard
        p.
          An example of a dashboard with navbar, side menu, and a large primary
          space for display of information.
        p
          a(class="btn btn-default", href="/example-3-dashboard.html") Example 3 &raquo;

    hr

    footer
      p &copy; {{ Site Owner }} 2014
    
